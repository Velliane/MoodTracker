<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cornflower_blue_65"
    android:id="@+id/activity_main_layout"
    tools:context=".controller.MainActivity">

    <ImageView
        android:id="@+id/activity_main_img_view"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="205dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/smiley_normal"
        />

    <ImageButton
        android:id="@+id/activity_main_comments_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_note_add_black"
        />

    <ImageButton
        android:id="@+id/activity_main_history_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_history_black"
        android:background="?android:selectableItemBackground"
        />

</RelativeLayout>